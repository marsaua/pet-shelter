<% if current_user&.user? && @dog.status=="available" %>
    <% if @dog.adopts.exists?(user_id: current_user.id) %>
        <%= link_to "You have already sent an adoption request", dog_adopt_path(@dog), class: "btn btn-primary disabled" %>
    <% else %>
        <%= link_to "Adopt", new_dog_adopt_path(@dog), class: "btn btn-primary" %>
    <% end %>
<% end %>
