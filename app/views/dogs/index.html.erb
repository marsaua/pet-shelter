<section class="back-img">
  <div class="container">
    <h1 class="text-center">Pets</h1>

    <% if policy(Dog.new).create? %>
      <%= link_to "New Dog", new_dog_path, class: "btn btn-primary my-3 d-block mx-auto" %>
    <% end %>

    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">üîç Filter Dogs</h5>
        <%= search_form_for @q, url: dogs_path, method: :get, html: { class: "row g-3" } do |f| %>

          <div class="col-md-3">
            <%= f.label :name_cont, "Name", class: "form-label" %>
            <%= f.search_field :name_cont,
                placeholder: "Search by name...",
                class: "form-control" %>
          </div>

          <div class="col-md-3">
            <%= f.label :breed_cont, "Breed", class: "form-label" %>
            <%= f.search_field :breed_cont,
                placeholder: "Search by breed...",
                class: "form-control" %>
          </div>

          <div class="col-md-2">
            <%= f.label :sex_eq, "Sex", class: "form-label" %>
            <%= f.select :sex_eq,
                options_for_select([
                  ["All", ""],
                  ["Male", "male"],
                  ["Female", "female"]
                ], f.object.sex_eq),
                {},
                class: "form-select" %>
          </div>

          <div class="col-md-2">
            <%= f.label :size_eq, "Size", class: "form-label" %>
            <%= f.select :size_eq,
                options_for_select([
                  ["All", ""],
                  ["Small", "small"],
                  ["Medium", "medium"],
                  ["Large", "large"]
                ], f.object.size_eq),
                {},
                class: "form-select" %>
          </div>

          <div class="col-md-2">
            <%= f.label :status_eq, "Status", class: "form-label" %>
            <%= f.select :status_eq,
                options_for_select(dog_status_options, f.object.status_eq),
                {},
                class: "form-select" %>
          </div>

          <div class="col-md-2">
            <%= f.label :age_month_gteq, "Age from (months)", class: "form-label" %>
            <%= f.number_field :age_month_gteq,
                placeholder: "Min age",
                class: "form-control",
                min: 0 %>
          </div>

          <div class="col-md-2">
            <%= f.label :age_month_lteq, "Age to (months)", class: "form-label" %>
            <%= f.number_field :age_month_lteq,
                placeholder: "Max age",
                class: "form-control",
                min: 0 %>
          </div>

          <div class="col-md-3">
            <%= f.label :s, "Sort by", class: "form-label" %>
            <%= f.select :s,
                options_for_select([
                  ["Newest first", "created_at desc"],
                  ["Oldest first", "created_at asc"],
                  ["Name A-Z", "name asc"],
                  ["Name Z-A", "name desc"],
                  ["Age: Young to Old", "age_month asc"],
                  ["Age: Old to Young", "age_month desc"]
                ], f.object.sorts.first&.to_s),
                {},
                class: "form-select" %>
          </div>

          <div class="col-md-5 d-flex align-items-end">
            <%= f.submit "Search", class: "btn btn-primary me-2" %>
            <%= link_to "Clear", dogs_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>

    <% if @dogs.any? %>
      <p class="text-muted mb-3">
        Found <%= @dogs.total_count %> <%= "dog".pluralize(@dogs.total_count) %>
      </p>
      <div class="row row-cols-1 auto-grid">
        <%= render @dogs %>
      </div>
      <%= paginate @dogs %>
    <% else %>
      <div class="alert alert-info">
        No dogs found matching your criteria. Try adjusting your filters.
      </div>
    <% end %>
  </div>
</section>
