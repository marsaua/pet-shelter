<section class="back-img">
    <div class="container">
        <h1>Dogs</h1>
        <%= link_to "New Dog", new_dog_path %>
        <% if @dogs.any? %>
            <div class="row row-cols-1 auto-grid">
                <%= render @dogs %> <!-- render each dog in the collection automatically -->
            </div>
            <%= paginate @dogs %>
        <% else %>
            <p>No dogs found</p>
        <% end %>
    </div>
</section>