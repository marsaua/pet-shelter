<%= form_with(model: @dog) do |form| %>
    <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :sex, class: "form-label" %>
        <%= form.select :sex, %w[male female], {}, { class: "form-select" } %>
    </div>
    <div class="mb-3">
        <%= form.label :age_month, class: "form-label" %>
        <%= form.text_field :age_month, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :size, class: "form-label" %>
        <%= form.select :size, %w[small medium large], {}, { class: "form-select" } %>
    </div>
    <div class="mb-3">
        <%= form.label :breed, class: "form-label" %>
        <%= form.text_field :breed, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :status, class: "form-label" %>
        <%= form.select :status, %w[available adopted], {}, { class: "form-select" }  %>
    </div>
    <div class="mb-3">
        <%= form.label :avatar, class: "form-label" %>
        <%= form.file_field :avatar, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.submit class: "btn btn-primary" %>
    </div>
<% end %>