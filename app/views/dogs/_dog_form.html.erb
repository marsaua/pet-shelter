<%= form_with(model: @dog) do |form| %>
    <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :sex, class: "form-label" %>
        <%= form.select :sex, %w[male female], {}, { class: "form-select" } %>
    </div>
    <div class="mb-3">
        <%= form.label :age_month, class: "form-label" %>
        <%= form.text_field :age_month, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :size, class: "form-label" %>
        <%= form.select :size, %w[small medium large], {}, { class: "form-select" } %>
    </div>
    <div class="mb-3">
        <%= form.label :breed, class: "form-label" %>
        <%= form.text_field :breed, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :status, class: "form-label" %>
        <%= form.select :status, Dog.statuses.keys.map { |status| [status.titleize, status] }, {}, { class: "form-select" }  %>
    </div>

    <h4>Health Status and Treatment</h4>

    <div class="mb-3">
        <%= form.label :health_status, "Health Status", class: "form-label" %>
        <%= form.select :health_status, Dog.health_statuses.keys.map { |status| [status.humanize, status] }, {}, { class: "form-select" } %>
    </div>

    <div class="mb-3">
        <%= form.label :disease_name, "Disease Name", class: "form-label" %>
        <%= form.text_field :disease_name, value: @dog.diagnosis&.dig("disease_name"), class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :description, "Description", class: "form-label" %>
        <%= form.text_field :description, value: @dog.diagnosis&.dig("description"), class: "form-control" %>
    </div>

    <h5>Medicine</h5>
    <div class="mb-3">
        <%= form.label :medicine_name, "Medicine Name", class: "form-label" %>
        <%= form.text_field :medicine_name, value: @dog.diagnosis&.dig("medicine_name"), class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :price, "Price", class: "form-label" %>
        <%= form.text_field :price, value: @dog.diagnosis&.dig("price"), class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :frequency, "Frequency", class: "form-label" %>
        <%= form.text_field :frequency, value: @dog.diagnosis&.dig("frequency"), class: "form-control" %>
    </div>

    <h5>Aggressiveness</h5>
    <div class="mb-3">
        <%= form.label :aggressiveness, "Aggressiveness", class: "form-label" %>
        <%= form.select :aggressiveness, Dog.agressivnesses.keys.map { |status| [status.titleize, status] }, {}, { class: "form-select" }  %>
    </div>


    <div class="mb-3">
        <%= form.label :avatar, class: "form-label" %>
        <%= form.file_field :avatar, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.submit class: "btn btn-primary" %>
    </div>
<% end %>
