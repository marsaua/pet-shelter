<div class="flex-grow-1 flex-basis-0 min-w-0">
<%= form_with model: @contact_us, url: contact_us_path, local: true do |form| %>
    <div class="form-group mt-4">
        <%= form.label :first_name, 'First Name', class: 'form-label' %>
        <%= form.text_field :first_name, class: 'form-control' %>
    </div>
    <div class="form-group mt-4">
        <%= form.label :last_name, 'Last Name', class: 'form-label' %>
        <%= form.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="form-group mt-4">
        <%= form.label :email, 'Email', class: 'form-label' %>
        <%= form.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group mt-4">
        <%= form.label :message, 'Message', class: 'form-label' %>
        <%= form.text_area :message, class: 'form-control' %>
    </div>
    <%= form.submit 'Send', class: 'btn btn-primary mt-4' %>
<% end %>
</div>
