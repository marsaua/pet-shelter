<h3>Step 2: Responsible Person Information</h3>

<div class="alert alert-info mb-4">
  <strong>Selected:</strong>
  <%= @walking_reservation.reservation_date %> at
  <%= @walking_reservation.time_slot %>
</div>

<%= form_with url: new_dog_walking_reservation_path(@dog), method: :get, local: true do |f| %>
  <%= hidden_field_tag :step, 2 %>

  <div class="mb-3">
    <%= label_tag 'walking_reservation[responsible_name]', "Full Name", class: "form-label" %>
    <%= text_field_tag 'walking_reservation[responsible_name]',
                       @walking_reservation.responsible_name,
                       class: "form-control",
                       required: true,
                       placeholder: "Enter your full name" %>
  </div>

  <div class="mb-3">
    <%= label_tag 'walking_reservation[responsible_phone]', "Phone Number", class: "form-label" %>
    <%= telephone_field_tag 'walking_reservation[responsible_phone]',
                            @walking_reservation.responsible_phone,
                            class: "form-control",
                            required: true,
                            placeholder: "+380XXXXXXXXX",
                            id: "phone_input",
                            title: "Please enter a valid phone number starting with +380" %>

  </div>

  <div class="mb-4">
    <%= label_tag 'walking_reservation[responsible_email]', "Email", class: "form-label" %>
    <%= email_field_tag 'walking_reservation[responsible_email]',
                        @walking_reservation.responsible_email,
                        class: "form-control",
                        required: true,
                        placeholder: "your.email@example.com" %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "Back", new_dog_walking_reservation_path(@dog, step: 1, back: true),
                class: "btn btn-outline-secondary" %>
    <%= submit_tag "Next", class: "btn btn-primary" %>
  </div>
<% end %>
