
    <h1>Adoptation wishes</h1>
        <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Dog</th>
            <th>Yard</th>
            <th>Home</th>
            <th>Has Pets</th>
        </tr>
        </thead>
        <tbody>
        <% @adopts.each do |adopt| %>
            <tr>
            <td><%= adopt.name %></td>
            <td><%= adopt.email %></td>
            <td><%= adopt.phone %></td>
            <td><%= adopt.dog&.name %></td>
            <td><%= adopt.yard ? "Yes" : "No" %></td>
            <td><%= adopt.home ? "Yes" : "No" %></td>
            <td><%= adopt.has_another_pets ? "Yes" : "No" %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
    